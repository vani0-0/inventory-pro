generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String        @id @default(uuid())
  name         String
  sku          String        @unique
  category     String
  description  String?
  price        Float
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  saleItems    SaleItem[]

  @@map("products")
}

model Transaction {
  id        String          @id @default(uuid())
  productId String
  type      TransactionType
  quantity  Int
  reason    String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  product Product @relation(fields: [productId], references: [id])

  @@map("transactions")
}

model SaleItem {
  id        String @id @default(uuid())
  saleId    String
  productId String
  quantity  Int
  price     Float // Price at the time of sale
  total     Float

  product Product @relation(fields: [productId], references: [id])
  sale    Sale    @relation(fields: [saleId], references: [id])

  @@map("sale_items")
}

model Sale {
  id            String            @id @default(uuid())
  customerName  String?
  paymentMethod PaymentMethodType
  totalAmount   Float
  amountPaid    Float
  change        Float
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  saleItems     SaleItem[]

  @@map("sales")
}

enum TransactionType {
  PURCHASE
  SALE
  ADJUSTMENT
  RETURN
}

enum PaymentMethodType {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  ONLINE
}
